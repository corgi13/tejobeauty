# Tejo Beauty - Environment Configuration
# Copy to .env and update with actual values

# Application
APP_NAME="Tejo Beauty"
APP_URL="https://tejo-beauty.com"
APP_ENV="production"
APP_DEBUG="false"
APP_PORT="3000"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tejo_beauty"
DATABASE_POOL_SIZE="20"
DATABASE_SSL="true"

# Redis Cache
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_DB="0"
REDIS_TTL="3600"

# Elasticsearch
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your-elasticsearch-password"
ELASTICSEARCH_INDEX_PREFIX="tejo_beauty"

# JWT & Security
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"
CSRF_SECRET="your-csrf-secret-key"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Payment Processing
STRIPE_PUBLIC_KEY="pk_live_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@tejo-beauty.com"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="Tejo Beauty <noreply@tejo-beauty.com>"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="tejo-beauty-assets"
AWS_CLOUDFRONT_URL="https://cdn.tejo-beauty.com"

# External APIs
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
AVALARA_API_KEY="your-avalara-tax-api-key"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
PROMETHEUS_PORT="9090"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="1000"

# CORS
ALLOWED_ORIGINS="https://tejo-beauty.com,https://www.tejo-beauty.com,https://admin.tejo-beauty.com"

# Internationalization
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,hr,de,fr,it,es"
DEFAULT_CURRENCY="EUR"
SUPPORTED_CURRENCIES="EUR,USD,GBP,CHF"

# Business Settings
COMPANY_NAME="Tejo Beauty d.o.o."
COMPANY_ADDRESS="Ilica 242, 10000 Zagreb, Croatia"
COMPANY_VAT="HR12345678901"
COMPANY_PHONE="+385 1 234 5678"
COMPANY_EMAIL="info@tejo-beauty.com"

# Warehouse Settings
DEFAULT_WAREHOUSE_ID="warehouse_zagreb_001"
ENABLE_MULTI_WAREHOUSE="true"
ENABLE_DROPSHIPPING="true"

# B2B Settings
MIN_ORDER_AMOUNT="100"
BULK_DISCOUNT_THRESHOLD="500"
QUOTE_VALIDITY_DAYS="30"
CREDIT_CHECK_ENABLED="true"