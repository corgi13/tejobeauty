# Production Environment Variables
NODE_ENV=production

# Database
POSTGRES_DB=tejo_nails_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Backend
BACKEND_PORT=3001
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/tejo_nails_platform?schema=public
REDIS_URL=redis://:your-secure-redis-password@redis:6379

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=https://tejo-nails.hr
NEXT_PUBLIC_API_URL=https://tejo-nails.hr/api
NEXT_PUBLIC_FRONTEND_URL=https://tejo-nails.hr

# Croatian Market Settings
DOMAIN=tejo-nails.hr
DEFAULT_LOCALE=hr
DEFAULT_CURRENCY=EUR
DEFAULT_TIMEZONE=Europe/Zagreb
CROATIA_TAX_ENABLED=true
CROATIA_SHIPPING_ENABLED=true
NEXT_PUBLIC_DEFAULT_LOCALE=hr
NEXT_PUBLIC_DEFAULT_CURRENCY=EUR
NEXT_PUBLIC_CROATIA_FEATURES=true

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Algolia Search
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_admin_key
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Tools
PGADMIN_EMAIL=admin@tejonails.com
PGADMIN_PASSWORD=your-secure-pgadmin-password
PGADMIN_PORT=5050

REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=your-secure-redis-commander-password
REDIS_COMMANDER_PORT=8081

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_PORT=3001

# Elasticsearch (Optional)
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601