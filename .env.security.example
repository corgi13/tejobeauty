# Security Environment Variables Template
# Copy this file to .env and fill in the actual values

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-here-change-in-production

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here-change-in-production

# Database Encryption
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-here-change-in-production

# API Keys (use environment-specific values)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-change-in-production
SESSION_TIMEOUT=86400000

# Logging
LOG_LEVEL=info
LOG_SENSITIVE_DATA=false

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/secure/uploads

# Security Headers
HSTS_MAX_AGE=31536000
CONTENT_TYPE_NOSNIFF=true
FRAME_OPTIONS=DENY
XSS_PROTECTION=1; mode=block